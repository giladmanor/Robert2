<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="co.quizic.robert2.CommanderActivity"
    android:padding="0dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorC"
        android:id="@+id/commandPane"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="184dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorE">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Commands"
                    android:id="@+id/textView2"
                    android:layout_gravity="center_horizontal" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="forward"
                    android:id="@+id/button"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:onClick="addCommand"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="left"
                        android:id="@+id/button4"
                        android:layout_row="0"
                        android:layout_column="3"
                        android:onClick="addCommand"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="right"
                        android:id="@+id/button2"
                        android:layout_row="0"
                        android:layout_column="2" android:onClick="addCommand" />

                </LinearLayout>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="back"
                    android:id="@+id/button3"
                    android:layout_row="0"
                    android:layout_column="1" android:onClick="addCommand"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="bottom">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start"
                    android:id="@+id/button6"
                    android:onClick="sendBT"
                    android:layout_gravity="center_horizontal|bottom" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:weightSum="1"
            android:background="@color/colorB">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:background="@color/colorC">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Sequence"
                    android:id="@+id/textView3"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:ems="20"
                android:id="@+id/editText" />





        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
