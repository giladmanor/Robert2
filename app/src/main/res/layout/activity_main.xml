<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorD">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorA"
            android:id="@+id/btDeviceSelector">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Connect to BT device"
                    android:id="@+id/textView"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:id="@+id/btDevices"
                android:visibility="invisible"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="142dp"
            android:layout_height="144dp"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/r2d2"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorC"
            android:id="@+id/commandPane"
            android:visibility="gone">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Commands"
                    android:id="@+id/textView2" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:id="@+id/button"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:onClick="addCommand"/>

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:id="@+id/button3"
                    android:layout_row="0"
                    android:layout_column="1" android:onClick="addCommand"/>

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:id="@+id/button2"
                    android:layout_row="0"
                    android:layout_column="2" android:onClick="addCommand" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="D"
                    android:id="@+id/button4"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:onClick="addCommand"/>

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="E"
                    android:id="@+id/button5"
                    android:layout_row="0"
                    android:layout_column="4" android:onClick="addCommand"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <Button
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:text="Start"
                    android:id="@+id/button6"
                    android:layout_gravity="bottom"
                    android:onClick="sendBT"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Sequence"
                        android:id="@+id/textView3"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="262dp"
                    android:layout_height="351dp"
                    android:background="@color/colorB"
                    android:id="@+id/commandList"
                    android:gravity="center_horizontal">

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
